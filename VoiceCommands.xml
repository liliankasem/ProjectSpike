<?xml version="1.0" encoding="utf-8" ?>

<VoiceCommands xmlns="http://schemas.microsoft.com/voicecommands/1.2">

  <!-- Create a new command set for a certain language, in this case it is British English -->
  <CommandSet xml:lang="en-gb" Name="HoLCommandSet_en-gb">

    <!-- The app name is the word or phrase your users can speak to tell the system to start listening for commands from your app -->
    <AppName> Spike </AppName>
    <Example> Launch </Example>

    <!-- Creating a new command -->
    <Command Name="LaunchApp">

      <!-- An Example element is a word or phrase describing how a user can invoke the command. Cortana shows this example when the user says "What can I say?" -->
      <Example>launch</Example>

      <!-- The ListenFor element defines the word or words that will be recognised for this command -->
      <ListenFor>launch</ListenFor>

      <!-- The Feedback element that defines the confirmation text that Cortana will speak back to the user when the command is recognised -->
      <Feedback>Opening Project Spike</Feedback>

      <!-- The Navigate element signifies that the app will launch in the foreground -->
      <Navigate />

    </Command>

    <Command Name="CheckRoom">
      <Example>Ask, is this room free?</Example>
      <ListenFor>Ask, is this room free?</ListenFor>
      <Feedback>Checking room availability</Feedback>
      <Navigate />
    </Command>

    <Command Name="BookRoom">
      <Example>Ask, can I book this room?</Example>
      <ListenFor>Ask, can I book this room?</ListenFor>
      <Feedback>Checking room availability</Feedback>
      <Navigate />
    </Command>

    <Command Name="PlayMusic">
      <Example>Play, music</Example>
      <ListenFor>Play, music</ListenFor>
      <Feedback>Playing your songs</Feedback>
      <Navigate />
    </Command>

    <Command Name="CallContact">
      <Example>Call, Lilian</Example>
      <ListenFor>Call, {name}</ListenFor>
      <Feedback>Calling {name}</Feedback>
      <Navigate />
    </Command>

  </CommandSet>

</VoiceCommands>